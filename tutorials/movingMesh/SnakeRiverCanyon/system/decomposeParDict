FoamFile
{
    format      ascii;
    class       dictionary;
    note        "mesh decomposition control dictionary";
    location    "system";
    object      decomposeParDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

numberOfSubdomains  2;

method          hierarchical;

simpleCoeffs
{
    n           (2 2 1);
}

hierarchicalCoeffs
{
    n           (2 1 1);
    order       xyz;
}

manualCoeffs
{
    dataFile    "decompositionData";
}


