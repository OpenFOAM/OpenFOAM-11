FoamFile
{
    format      ascii;
    class       dictionary;
    location    "constant";
    object      fvConstraints;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ignition
{
    type            fixedTemperatureConstraint;

    cellSet         ignition;

    mode            uniform;

    temperature     2000;

    fraction
    {
        type            table;
        values          ((0 0) (0.1 0) (0.2 1) (0.4 1) (0.5 0));
    }
}

