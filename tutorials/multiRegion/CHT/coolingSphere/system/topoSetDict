// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "$FOAM_CASE/system/blockMeshDict"

actions
(
    {
        name    cs;
        type    cellSet;
        action  new;
        source  sphereToCell;
        centre  (0 0 0);
        radius  $!geometry/sphere/radius;
    }
    {
        name    solid;
        type    cellZoneSet;
        action  new;
        source  setToCellZone;
        set     cs;
    }
);

