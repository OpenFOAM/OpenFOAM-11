FoamFile
{
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform (0 -0.075 0);
    }

    outlet
    {
        type            zeroGradient;
    }

    sides
    {
        type            noSlip;
    }

    wall
    {
        type            noSlip;
    }

    surface
    {
        type            filmSurfaceVelocity;
        Cs              0.005;
        value           $internalField;
    }
}


// ************************************************************************* //
