FoamFile
{
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    film
    {
        type            mappedValue;
        value           $internalField;
    }

    "(sides|frontAndBack)"
    {
        type            noSlip;
    }

    top
    {
        type            pressureInletOutletVelocity;
        value           $internalField;
    }
}

