FoamFile
{
    format      ascii;
    class       volVectorField;
    location    "0/film";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    surface
    {
        type            filmSurfaceVelocity;
        Cs              0.005;
        value           $internalField;
    }

    wall
    {
        type            noSlip;
    }

    sides
    {
        type            noSlip;
    }

    frontAndBack
    {
        type            slip;
    }
}

// ************************************************************************* //
