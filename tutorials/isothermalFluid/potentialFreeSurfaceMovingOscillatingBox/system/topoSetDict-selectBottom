actions
(
    {
        name    floatingObjectBottom;
        type    faceSet;
        action  new;
        source  patchToFace;
        patch   floatingObject;
    }

    {
        name    floatingObjectBottom;
        type    faceSet;
        action  subset;
        source  normalToFace;
        normal (0 1 0);     // Vector
        cos     0.01;       // Tolerance (max cos of angle)
    }
);

