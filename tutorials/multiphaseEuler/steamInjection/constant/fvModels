FoamFile
{
    format      ascii;
    class       dictionary;
    location    "constant";
    object      fvModels;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

massSource
{
    type            massSource;

    points
    (
        (0.075 0.2 0.05)
    );

    phase           steam;
    rho             rho.steam;

    massFlowRate
    {
        type            scale;
        scale           squarePulse;
        start           1;
        duration        1e6;
        value           1e-3;
    }

    fieldValues
    {
        U.steam         (0 10 0);
        h.steam         3700000;
    }
}


