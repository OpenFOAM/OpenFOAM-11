FoamFile
{
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    bottom
    {
        type            noSlip;
    }

    "(top|inlet)"
    {
        type            waveVelocity;
        libs            ("libwaves.so");
    }

    outlet
    {
        type            pressureInletOutletVelocity;
        value           $internalField;
    }

    "(front|back)"
    {
        type            symmetryPlane;
    }
}


